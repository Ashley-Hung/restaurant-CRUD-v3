<div class="container h-100 mt-5">
  {{#each errors}}
    <div class="alert alert-danger text-center form-group mt-3" role="alert" style="letter-spacing: 1px;">
      {{this.msg}}
    </div>
  {{/each}}
  <small for="title" style="color: red;">*必填欄位</small>
  <form action="/restaurants" method="post" class="form" novalidate onsubmit="return submitForm(event)">
    {{!-- Name(CN) --}}
    <div class="form-group form-row">
      <label for="name" class="col-md-2 col-form-label">
        Name(CH) <p class="required">*</p>
      </label>
      <div class="col-md-10">
        <input type="text" name="name" class="form-control" id="name" required>
      </div>
    </div>

    {{!-- Name(EN) --}}
    <div class=" form-group form-row mb-2 align-items-center">
      <label for="name_en" class="col-md-2 col-form-label">
        Name(EN)
      </label>
      <div class="col-md-10">
        <input type="text" name="name_en" class="form-control" id="name_en">
      </div>
    </div>

    {{!-- Category --}}
    <div class=" form-group form-row mb-2 align-items-center">
      <label for="category" class="col-md-2 col-form-label">
        Category
      </label>
      <div class="col-md-10">
        <input type="text" name="category" class="form-control" id="category">
      </div>
    </div>

    {{!-- Image --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="image" class="col-md-2 col-form-label">
        Image
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="URL" name="image" class="form-control" id="image">
      </div>
    </div>

    {{!-- Location --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="location" class="col-md-2 col-form-label">
        Location <p class="required">*</p>
      </label>
      <div class="col-md-10">
        <input type="text" name="location" class="form-control" id="location" required>
      </div>
    </div>

    {{!-- Phone --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="phone" class="col-md-2 col-form-label">
        Phone <p class="required">*</p>
      </label>
      <div class="col-md-10">
        <input type="tel" name="phone" class="form-control" id="phone" required>
      </div>
    </div>

    {{!-- Google-map --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="google_map" class="col-md-2 col-form-label">
        Google map
      </label>
      <div class="col-md-10">
        <input type="text" name="google_map" class="form-control" id="google_map">
      </div>
    </div>

    {{!-- Rating --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="rating" class="col-md-2 col-form-label">
        Rating
      </label>
      <div class="col-md-10">
        <input type="number" name="rating" placeholder="1 ~ 5" class="form-control" id="rating" step="0.1" min="1.0"
          max="5.0">
      </div>
    </div>

    {{!-- Description --}}
    <div class="form-group form-row mb-2 align-items-center">
      <label for="description" class="col-md-2 col-form-label">Description</label>
      <div class="col-md-10">
        <textarea id="description" name="description" class="form-control"></textarea>
      </div>
    </div>

    <button class="btn btn-outline-success mb-5" type="submit" id="submit"
      onclick="return clickSubmit()">Create</button>
  </form>
</div>